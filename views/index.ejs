<%- include('partials/header.ejs'); %>
<body>
    <%- include('partials/navbar.ejs'); %>
    
    <div class="container">
    
        
        <br>
        

            <div class="jumbotron jumbotron-fluid">
                <div class="container">
                  <h2 class="display-4">Faça uma pergunta</h1>
                  <p class="lead">Realize uma pergunta ou responda as perguntas já feitas na relação abaixo.</p>
                  
                    <a href="/perguntar" class="btn btn-secondary">Perguntar</a>
            
                </div>
              </div>

            <h1 class="text-center">Perguntas</h1>
           
        
        <hr>
        <% perguntas.forEach(pegunta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3>
                        <%= pegunta.titulo %>
                    </h3>
                    <p>
                        <%= pegunta.descricao %>
                    </p>
                    <div class="card-footer">
                        <a href="/pergunta/<%= pegunta.id %>"><button class="btn btn-primary">Responder</button></a>
                    </div>
                </div>
            </div>
        <% }) %> 

    </div>


<%- include('partials/footer.ejs'); %>